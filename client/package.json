{
  "name": "node-react-kit",
  "version": "1.0.0",
  "description": "node-react-kit is a fully containerized dev kit designed to get you up and running fast for Node and React development. This kit ships with Docker config, a Noder server, a React-TypeScript client, and helper scripts.",
  "main": "src/app.tsx",
  "repository": "https://github.com/pascalallen/node-react-kit",
  "author": "Pascal Allen",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "ci": "yarn install --frozen-lockfile",
    "dev": "webpack --config webpack.config.js --mode development",
    "watch": "webpack --config webpack.config.js --mode development --watch"
  }
}
